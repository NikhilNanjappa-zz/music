!!! 5
%html
 %head
  %title Music
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false"}
  =stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  =javascript_include_tag "application", "data-turbolinks-track" => true
  =csrf_meta_tags
 %body
  .navbar.navbar-fixed-top
   .navbar-inner.my-navbar
    .container
     %ul.nav.my-nav
      %li.active
       %a.brand Music Is My Medicine
      %li
       %a{ :href => "#"} About
      %li
       %a{ :href => "#"} Portfolio
      %li
       %a{ :href => "#"} Contact
     =form_tag(songs_path, :method => "get", class: "navbar-form", id: "search-form") do
      .input-append
       =text_field_tag :search, params[:search], class: "span2", placeholder: "Search for Songs"
       %button Search
   =yield
